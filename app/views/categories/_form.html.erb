
<div class = "row justify-content-center">
  <div class="col-3">
    <%= form_with(model: category, class:" p-3 mb-4  rounded") do |form| %>
      <% if category.errors.any? %>
        <div id="error_explanation">
          <h4 class="text-danger"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h4>

          <ul>
            <% category.errors.each do |error| %>
              <li  class="text-white bg-dark"><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  
      <div class="form-group row  ">
        <%= form.label :name, "New Category name", class:"fs-10 col-sm-10  text-dark " %>
        <div class = "col">
          <%= form.text_field :name ,placeholder:"enter category name",class:"form-control"%>
        </div>
      </div>  

      <div >
        <%= form.submit class:"btn btn-success"%>
      </div>
    <% end %>
  </div>
</div>

